@{
    ViewBag.Title = "Employees List";
}
@section scripts{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/Plugins/bootbox.js"></script>
    <script src="~/Scripts/controllers/homeController.js"></script>
    <script src="~/Scripts/Plugins/mustache.js"></script>
    <script src="~/Scripts/Plugins/jquery.twbsPagination.min.js"></script>

}
<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal" tabindex="-1" id="modalAddUpdate" role="dialog">
    <div class="modal-dialog" role="document">
        <!--Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Add-Update Employee</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label for="txtName">Name:</label>
                        <input type="text" class="form-control" id="txtName">
                    </div>
                    <div class="form-group">
                        <input type="hidden" id="hidID" value="0" />
                        <label for="txtSalary">Salary:</label>
                        <input type="number" class="form-control" id="txtSalary">
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" id="ckStatus">Active</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="btnSave">Save changes</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div style="margin:20px auto 20px 0px">
        <button id="btnAddNew" class="btn btn-primary">Add Employee</button>
    </div>
</div>
<div class="row">
    <div class="col-md-12"></div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Salary</td>
                <td>Status</td>
                <td></td>
            </tr>
        </thead>
        <tbody id="tblData"></tbody>
    </table>
    <div id="pagination" class="pagination">

    </div>
    <script id="data-template" type="x-tmpl-mustache">
        <tr>
            <td>{{ID}}</td>
            <td>{{Name}}</td>
            <td><input type="number" class="txtSalary" data-id="{{ID}}" value="{{Salary}}" /> </td>
            <td>{{{Status}}}</td>
            <td>
                <button class="btn btn-info btn-edit" data-id="{{ID}}" style="margin-left: 30px">Edit</button>
                <button class="btn btn-danger btn-delete" data-id="{{ID}}" style="margin-left: 30px" >Delete</button>
            </td>
        </tr>
    </script>
</div>

